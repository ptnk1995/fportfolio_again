<div class="modal-body">
<%= form_for [:admin, @post] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :title, t(".name"), class: "field-compulsory-before" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :category, t(".name"), class: "field-compulsory-before" %>
    <%= f.select :category_id, Category.blog.collect {|p| [ p.name, p.id ] }, {}, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :content, t(".name"), class: "field-compulsory-before" %>
    <%= f.text_area :content, class: "form-control ckeditor", required: true %>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <%= f.submit "save", class: "btn btn-primary" %>
</div>
<% end %>
