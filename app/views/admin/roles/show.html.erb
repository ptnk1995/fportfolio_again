<div class="row">
  <% @users.each do |user| %>
  <div class="col-sm-6 col-md-4">
      <!-- Advanced Active Theme Color Widget -->
      <div class="widget">
          <div class="widget-advanced">
              <!-- Widget Header -->
              <div class="widget-header text-center themed-background-dark">
                  <h3 class="widget-content-light">
                      <%= link_to "", class: "themed-color" do %><%= user.name %><% end %>
                      <br>
                        <small><%= @role.name %></small>
                  </h3>
              </div>
              <!-- END Widget Header -->

              <!-- Widget Main -->
              <div class="widget-main">
                  <a href="page_ready_user_profile.html" class="widget-image-container animation-hatch">
                      <%= image_tag "framgia.jpg", class: "widget-image img-circle" %>
                  </a>
                  <div class="row text-center animation-fadeIn">
                      <div class="col-xs-6">
                          <h3><strong>140</strong><br><small>Followers</small></h3>
                      </div>
                      <div class="col-xs-6">
                          <h3><strong>15</strong><br><small>Projects</small></h3>
                      </div>
                  </div>
              </div>
              <!-- END Widget Main -->
          </div>
      </div>
      <!-- END Advanced Active Theme Color Widget -->
  </div>
  <% end %>
</div>


