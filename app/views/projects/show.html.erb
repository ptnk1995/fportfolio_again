      <%= render "shared/sidebar_project" %>
      <!-- END Sidebar -->
      <!-- Product Details -->
      <div class="col-md-8 col-lg-9">
        <div class="row" data-toggle="lightbox-gallery">
          <!-- Images -->
          <div class="col-sm-6 push-bit">
