              <div class="col-xs-4">
                <a href="/assets/portfolio/portfolio-1.png" class="gallery-link">
                <%= image_tag "portfolio/portfolio-1.png", class: "img-responsive" %>
                </a>
              </div>
            </div>
          </div>
          <!-- END Images -->
          <!-- Info -->
          <div class="col-sm-6 push-bit">
            <div class="clearfix">
              <span class="h4"><strong class="text-success"><%= @project.name %></strong><br>
              <small><%= l @project.created_at, format: :long %></small></span>
            </div>
